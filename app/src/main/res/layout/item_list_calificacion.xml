<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_value_10dp"
    android:layout_marginRight="@dimen/margin_value_10dp"
    android:layout_marginLeft="@dimen/margin_value_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombre_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_value_10dp"
                    android:layout_marginRight="@dimen/margin_value_10dp"
                    android:textStyle="bold"
                    android:text="Nombre del usuario" />

                <RatingBar
                    android:id="@+id/total_estrellas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:theme="@style/RatingBar" />
            </LinearLayout>

            <TextView
                android:id="@+id/fecha_calificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:textSize="10sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:text="Ayer"
                />

            <TextView
                android:id="@+id/descripcion_calificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_value_10dp"
                android:text="Muy bueno, con arro blanco" />

            <ImageView
                android:id="@+id/foto_evidencia"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_value_10dp"
                android:src="@drawable/productos"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>