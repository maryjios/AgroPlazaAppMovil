<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/nombre_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Nombre del usuario" />

    <TextView
        android:id="@+id/pregunta_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_cliente"
        android:layout_alignLeft="@+id/nombre_cliente"
        android:text="Cargo"
        tools:text="Aqui ira la pregunta del usuario cliente" />

    <TextView
        android:id="@+id/fecha_pregunta_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pregunta_cliente"
        android:layout_alignLeft="@+id/nombre_cliente"
        android:text="fecha"
        tools:text="10/14/2050" />

    <TextView
        android:id="@+id/respuesta_vendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fecha_pregunta_cliente"
        android:layout_marginTop="10sp"
        android:gravity="right"
        android:paddingRight="30dp"
        android:layout_marginRight="20dp"
        android:text="Aqui ira la respuesta del vendedors" />

    <TextView
        android:id="@+id/fecha_respuesta_vendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/respuesta_vendedor"
        android:gravity="right"
        android:paddingRight="30dp"
        android:layout_marginRight="20dp"
        tools:text="10/14/2050" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/fecha_respuesta_vendedor" />

</RelativeLayout>